<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.wifi_manager.wifi_analyzer.analyze_network_connection.activities.AddWifiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Enter Network Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/networkName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edt"
        android:paddingStart="16dp"
        android:layout_gravity="center"
        android:hint="Enter network name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/networkPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edt"
        android:paddingStart="16dp"
        android:layout_gravity="center"
        android:hint="Enter password" />


    <ImageView
        android:id="@+id/wifiQRCode"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/generateQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="center" />

</LinearLayout>